
@{
    ViewBag.Title = "ListPremios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using WebCujae.Models
@model List<Award>
@section bodyAdmin{
    <section class="content-header">
        <h1>
           Listado de premios registrados en el sistema
            <small>gestion de premios</small>
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Listado de maestrias y especialidades</h3>
                    </div>
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Autores</th>
                                    <th>Facultad</th>
                                    <th>Año</th>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>
                                            @i.name
                                        </td>
                                        <td>
                                           @i.autores
                                        </td>
                                        <td>
                                            @i.facultad
                                        </td>
                                        <td>
                                            @i.año @Html.ActionLink(" ", "DeletePremio", new { id = i.AwardId }, new { @class = "fa fa-remove fa-2x", @style = "margin-left:5px;color:#006633;" }) @Html.ActionLink("  ", "EditPremio", new { id = i.AwardId }, new { @class = "fa fa-edit fa-2x", @style = "margin-left:5px;color:#006633;" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <!-- /.box-footer-->
            </div>
        </div>
    </section>
}

